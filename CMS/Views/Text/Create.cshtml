@model CMS.Models.Text

@{
    ViewBag.Title = "Create";
}

<h2>Add new text on page --> @ViewBag.CatName</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Text</legend>

        @Html.HiddenFor(model => model.CatID, new { @Value = ViewBag.CatID})

        <div class="editor-label">
            @Html.LabelFor(model => model.TextTitle, "Title")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TextTitle)
            @Html.ValidationMessageFor(model => model.TextTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TextData, "Text")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.TextData)
            @Html.ValidationMessageFor(model => model.TextData)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TextPrio, "Text priority")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TextPrio)
            @Html.ValidationMessageFor(model => model.TextPrio)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
