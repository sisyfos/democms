@model CMS.Models.Video

@{
    ViewBag.Title = "Create";
}

<h2>Add new video on page --> @ViewBag.CatName</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Video</legend>

        @Html.HiddenFor(model => model.CatID, new { @Value = ViewBag.CatID})

        <div class="editor-label">
            @Html.LabelFor(model => model.VidTitle, "Title")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VidTitle)
            @Html.ValidationMessageFor(model => model.VidTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VidUrl, "URL")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VidUrl)
            @Html.ValidationMessageFor(model => model.VidUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VidDesc, "Description")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VidDesc)
            @Html.ValidationMessageFor(model => model.VidDesc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VidPrio, "Priority")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VidPrio)
            @Html.ValidationMessageFor(model => model.VidPrio)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
