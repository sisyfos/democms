@model CMS.Models.Category

@{
    ViewBag.Title = "Admin Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    @Html.Partial("_AdminHeaderPartial")
}

  <div class="content">
    <div class="innercontent">
    
  
  <div class="buttonbottomleft">
  <h2>Add content on: @Html.DisplayFor(model => model.CatName)</h2>
            <button>@Html.ActionLink("Text", "Create", "Text", new { id = Model.CatID }, string.Empty)</button>
            <button>@Html.ActionLink("Picture", "Create", "Picture", new { id = Model.CatID }, string.Empty)</button>
            <button>@Html.ActionLink("Video", "Create", "Video", new { id = Model.CatID }, string.Empty)</button>
            <button>@Html.ActionLink("Link", "Create", "Link", new { id = Model.CatID }, string.Empty)</button>
</div></div></div>

 <div class="content">
    <div class="innercontent">
<hr class="clear"/>

<h3>Edit TEXT on: @Html.DisplayFor(model => model.CatName)</h3>

@foreach (var text in Model.Texts)
{
    
    @Html.Partial("_AdminTextPartial", text)
}

<hr class="clear"/>

<h3>Edit PICTURE on: @Html.DisplayFor(model => model.CatName)</h3>


@foreach (var picture in Model.Pictures)
{
    
    @Html.Partial("_AdminPicturePartial", picture)
}

<hr class="clear"/>

<h3>Edit VIDEO on: @Html.DisplayFor(model => model.CatName)</h3>

@foreach (var video in Model.Videos)
{
    
    @Html.Partial("_AdminVideoPartial", video)
}

<hr class="clear"/>

<h3>Edit LINK on: @Html.DisplayFor(model => model.CatName)</h3>

@foreach (var link in Model.Links)
{
    
    @Html.Partial("_AdminLinkPartial", link)
}
</div></div>