@model CMS.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Page --> @Html.DisplayFor(model => model.CatName)</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>

        @Html.HiddenFor(model => model.CatID)

        <div class="editor-label">
            @Html.LabelFor(model => model.CatName, "Page name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CatName)
            @Html.ValidationMessageFor(model => model.CatName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CatPrio, "Priority")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CatPrio)
            @Html.ValidationMessageFor(model => model.CatPrio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CatDesc, "Description")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CatDesc)
            @Html.ValidationMessageFor(model => model.CatDesc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TempID, "Template")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TempID", String.Empty)
            @Html.ValidationMessageFor(model => model.TempID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
