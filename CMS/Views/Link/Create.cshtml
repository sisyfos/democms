@model CMS.Models.Link

@{
    ViewBag.Title = "Create";
}

<h2>Add new text on page --> @ViewBag.CatName</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Link</legend>

        @Html.HiddenFor(model => model.CatID, new { @Value = ViewBag.CatID})

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkTitle, "Title")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkTitle)
            @Html.ValidationMessageFor(model => model.LinkTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkUrl, "URL")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkUrl)
            @Html.ValidationMessageFor(model => model.LinkUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkText, "Link text to show")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkText)
            @Html.ValidationMessageFor(model => model.LinkText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LinkPrio, "Priority")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LinkPrio)
            @Html.ValidationMessageFor(model => model.LinkPrio)
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
